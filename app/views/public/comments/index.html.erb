<div class="container mt-5">
	<div class="row">
		<div class="col-lg-6 col-md-8 col-sm-12">
			<h5 class="text-center text-light">
				<span class="bg-primary">　<%= @content.title %>に<%= @ng_expression.ng_expression %>　</span>
			</h5>
      <table class="table mt-3">
				<thead>
					<tr>
						<th>コメント一覧</th>
					</tr>
				</thead>
				<tbody>
					<% @comments.each do |comment| %>
						<tr>
							<td>
								<% if comment.is_draft == false %>
									<%= comment.comment %>
								<% else %>
									<% if comment.customer_id == current_customer.id %>
										<p class = "text-secondary"><%= comment.comment %>(下書き)</p>
									<% end %>
								<% end %>
							</td>
							<td>
								<% if comment.customer_id == current_customer.id %>
									<%= link_to "編集",
										edit_ng_expression_comment_path(@ng_expression.id, comment.id, content_id: @content.id),
										class: "btn btn-sm btn-success" %>
									<%= link_to "削除",
										ng_expression_comment_path(@ng_expression.id, comment.id), method: :delete,
										class:"btn btn-sm btn-danger" %>
								<% end %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>