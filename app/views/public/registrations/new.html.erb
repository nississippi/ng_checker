<div class="container mt-5">
	<div class="row">
		<div class="col-lg-6 col-md-8 col-sm-12">
      <h5><span class="bg-light">　新規会員登録　</span></h5>

      <%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
        <div class="field mb-2">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mb-2">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "会員登録", class: "btn btn-primary" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      <% end %>
      <%= render "public/shared/links" %>
    </div>
	</div>
</div>