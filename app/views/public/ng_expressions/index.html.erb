<div class="container mt-5">
	<div class="row">
		<div class="col-lg-2 col-md-2 col-sm-4">
			<h5 class ="mt-2">分類</h5>
				<ul class="list-unstyled">
					<li><%= link_to "すべて", ng_expressions_path %></li>
					<% @ng_genres.each do |ng_genre| %>
						<li>
							<%= link_to ng_genre.ng_genre, ng_expressions_path(ng_genre_id: ng_genre.id) %>
						</li>
					<% end %>
				</ul>
		</div>
		<div class="col-lg-4 col-md-6 col-sm-8">
			<table class="table">
				<thead>
					<tr>
						<th>NG表現</th>
						<th>分類</th>
					</tr>
				</thead>
				<tbody>
					<% @ng_expressions.each do |ng| %>
						<tr>
							<td>
								<%= link_to ng.ng_expression, ng_expression_path(ng), class: "underline" %>
							</td>
							<td><%= ng.ng_genre.ng_genre %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>