<div class="container mt-5">
	<div class="row">
		<div class="offset-lg-2 col-lg-8 col-sm-12">
		  <%= form_with model:@customer, url: customer_path(@customer) do |f| %>
    		<%= render 'layouts/error_messages', resource: @customer %>
    		<table class="table mt-3">
    			<tbody>
    			  <tr>
							<th>ユーザー名</th>
							<td>
							  <%= f.text_field :nickname, :placeholder =>"#{@customer.nickname}" %>
							</td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= f.text_field :email, :placeholder =>"#{@customer.email}" %></td>
						</tr>
						<tr>
							<td colspan="3" class="text-right"><%= f.submit "更新", class: "btn btn-sm btn-primary" %>
								<%= link_to "退会する", customer_unsubscribe_path, class:"btn btn-sm btn-danger" %>
							</td>
						</tr>
    			</tbody>
    		</table>
    	<% end %>
		</div>
	</div>
</div>