<div class="container mt-5">
	<div class="row">
		<div class="col-lg-6 col-md-8 col-sm-12">
		  <%= form_with model:@customer, url: customer_path(@customer) do |f| %>
    		<%= render 'layouts/error_messages', resource: @customer %>
    		<table class="table mt-3">
    			<thead>
    				<th></th>
    				<th></th>
    				<th></th>
    			</thead>
    			<tbody>
    			  <tr>
							<td>ユーザー名</td>
							<td>
							  <%= f.text_field :nickname, :placeholder =>"#{@customer.nickname}" %>
							</td>
						</tr>
						<tr>
							<td>メールアドレス</td>
							<td><%= f.text_field :email, :placeholder =>"#{@customer.email}" %></td>
						</tr>
						<tr>
							<td colspan="3"><%= f.submit "更新", class: "btn btn-primary" %></td>
						</tr>
    			</tbody>
    		</table>
    	<% end %>
		</div>
	</div>
</div>