<div class="container mt-5">
	<div class="row">
		<div class="offset-lg-2 col-lg-8 col-sm-12">
			<table class="table mt-3">
				<thead>
					<tr>
						<th>ユーザー一覧</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @customers.each do |customer| %>
						<tr>
							<td>
								<%= link_to customer.nickname, admin_customer_path(customer), class: "underline" %>
							</td>
							<td>
							  <% if customer.is_deleted? %>
      						<span>退会済み</span>
      					<% else %>
      						<span>有効</span>
      					<% end %>
							</td>
							<td class="text-center">
								<%= link_to "編集", edit_admin_customer_path(customer), class: "btn btn-sm btn-success" %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>