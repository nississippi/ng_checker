<div class="container mt-5">
	<div class="row">
		<div class="col-lg-6 col-md-8 col-sm-12">
		  <%= form_with model:@customer, url: admin_customer_path(@customer) do |f| %>
    		<%= render 'layouts/error_messages', resource: @customer %>
    		<table class="table mt-3">
    			<thead>
    				<th></th>
    				<th></th>
    				<th></th>
    			</thead>
    			<tbody>
    			  <tr>
    					<td>ユーザー名</td>
    					<td>
    					  <%= f.text_field :nickname, :placeholder =>"#{@customer.nickname}" %>
    					</td>
    				</tr>
    				<tr>
    					<td>ステータス</td>
    					<td><%= f.radio_button :is_deleted, false %><%= f.label :is_deleted, "有効", class: "text-deleted" %></td>
    					<td><%= f.radio_button :is_deleted, true %><%= f.label :is_deleted, "退会済み", class: "text-invalid" %></td>
    				</tr>
    				<tr>
    					<td colspan="3"><%= f.submit "更新", class: "btn btn-primary" %></td>
    				</tr>
    			</tbody>
    		</table>
    	<% end %>
		</div>
	</div>
</div>