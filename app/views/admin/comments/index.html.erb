<div class="container mt-5">
	<div class="row">
		<div class="offset-lg-2 col-lg-8 col-sm-12">
			<h5 class="text-center"><%= @content.title %>に</h5>
			<h5 class="text-center"><%= @ng_expression.ng_expression %>は出てくる？</h5>
      <table class="table mt-3">
				<thead>
					<tr>
						<th>コメント一覧</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @comments.each do |comment| %>
						<% unless comment.is_draft %>
							<tr>
								<td>
									<%= comment.comment %>
								</td>
								<td>
									<%= link_to "削除",
										admin_ng_expression_comment_path(@ng_expression.id, comment.id), method: :delete,
										class:"btn btn-sm btn-danger" %>
								</td>
							</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>