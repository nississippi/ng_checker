<section class="inner">
	<h2 class="section-ttl">媒体管理</h2>
	<div class="mb3">
		<h3>媒体新規登録</h3>
  	<%= render 'form', media_genre: @media, url: admin_media_genres_path, submit: '登録' %>
	</div>
	<div class="mb3">
		<h3>媒体一覧</h3>
		<table class="genre_info has_border">
			<thead>
				<tr>
					<th>媒体</th>
				</tr>
			</thead>
			<tbody>
				<% @medias.each do |media| %>
					<tr>
						<td><%= link_to media.media,
						admin_media_genres_path(media.id), class: "underline" %></td>
						<td class="text-center">
						  <%= link_to "編集", edit_admin_media_genre_path(media), class: "btn btn-success" %>
						  <%= link_to "削除", admin_media_genre_path(media), method: :delete, class:"btn btn-sm btn-danger" %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>