<%= form_with model:ng_expression, url: url do |f| %>
	<%= render 'layouts/error_messages', resource: ng_expression %>
	<div class="flex">
		<table class="">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= f.label :name, "NG表現" %></td>
					<td><%= f.text_field :ng_expression %></td>
				</tr>
				<tr>
					<td><%= f.label :ng_genre_id, "ジャンル" %></td>
					<td class="select_field"><%= f.collection_select :ng_genre_id, NgGenre.all, :id, :ng_genre %></td>
				</tr>
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= f.submit submit, class: "btn btn-primary" %>
		</div>
	</div>
<% end %>