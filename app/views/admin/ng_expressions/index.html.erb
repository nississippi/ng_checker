<div class="container mt-5">
	<div class="row">
		<div class="col-lg-6 col-md-8 col-sm-12">
			<h5 class="text-center text-light"><span class="bg-primary">　NG表現　</span></h5>
		  <%= render 'form', ng_expression: @ng_expression, url: admin_ng_expressions_path,
		  title: 'NG表現新規登録',submit: '登録' %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-6 col-md-8 col-sm-12">
			<table class="table mt-3">
				<thead>
					<tr>
						<th>NG表現一覧</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @ng_expressions.each do |ng| %>
						<tr>
							<td>
								<%= link_to ng.ng_expression, admin_ng_expressions_path, class: "underline" %>
							</td>
							<td class="text-center">
								<%= link_to "編集", edit_admin_ng_expression_path(ng), class: "btn btn-sm btn-success" %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>