<div class="container mt-5">
	<div class="row">
		<div class="offset-lg-2 col-lg-8 col-sm-12">
			<h5 class="text-center text-light"><span class="bg-primary">　作品傾向管理　</span></h5>
		  <%= render 'form', story_genre: @story, url: admin_story_genres_path, submit: '登録' %>

		  <table class="table mt-3">
				<thead>
					<tr>
						<th>作品傾向</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @stories.each do |story| %>
						<tr>
							<td><%= link_to story.story,
							admin_story_genres_path(story.id), class: "underline" %></td>
							<td class="text-center">
							  <%= link_to "編集", edit_admin_story_genre_path(story), class: "btn btn-sm btn-success" %>
							  <%= link_to "削除", admin_story_genre_path(story), method: :delete, class:"btn btn-sm btn-danger" %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>