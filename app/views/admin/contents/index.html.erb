<div class="container mt-5">
	<div class="row">
		<div class="offset-lg-3 col-lg-6 col-sm-12">
			<table class="table mt-3">
				<thead>
					<tr>
						<th>コンテンツ一覧</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @contents.each do |content| %>
						<tr>
							<td>
								<%= link_to content.title, admin_content_path(content), class: "underline" %>
							</td>
							<td class="text-center">
								<%= link_to "編集", edit_admin_content_path(content), class: "btn btn-sm btn-success" %>
								<%= link_to "削除", admin_content_path(content), method: :delete, class:"btn btn-sm btn-danger" %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>